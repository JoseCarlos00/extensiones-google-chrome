{
  "manifest_version": 3,
  "name": "Alerta de un pedido nuevo",
  "version": "1.0",
  "description": "Descripción de mi extensión",
  "permissions": [
    "activeTab"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icono16.png",
      "48": "icono48.png",
      "128": "icono128.png"
    }
  },
  "icons": {
    "16": "icono16.png",
    "48": "icono48.png",
    "128": "icono128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
