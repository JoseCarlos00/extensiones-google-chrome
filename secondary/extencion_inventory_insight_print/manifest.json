{
  "manifest_version": 3,
  "name": "Inventory insight Modal",
  "version": "1.0",
  "description": "Crea un Modal con la informacion del inventario",
  "permissions": [
    "activeTab", "scripting", "tabs"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/print16.png",
      "32": "images/print32.png",
      "48": "images/print48.png",
      "128": "images/print128.png"
    }
  },
  "icons": {
    "16": "images/print16.png",
    "32": "images/print32.png",
    "48": "images/print48.png",
    "128": "images/print128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": [
    "https://wms.fantasiasmiguel.com.mx/scale/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://wms.fantasiasmiguel.com.mx/scale/insights/2774*"
      ],
      "js": ["inventoryInsight.js"],
      "css": ["style.css"]
    }
    
  ],
  "web_accessible_resources": [
    {
      "resources": ["print/print.html"],
      "matches": ["<all_urls>"]
    }
  ],
  "content_security_policy": {
    "script-src": ["'self'", "'unsafe-inline'"],
    "object-src": "'self'"
  }
}
