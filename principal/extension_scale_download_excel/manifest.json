{
  "manifest_version": 3,
  "name": "Download Excel Scale",
  "version": "1.0",
  "author": "Jose Carlos Aguirre Romero>",
  "description": "Agrega el boton de donload exel a SCALE",
  "permissions": ["scripting", "activeTab", "storage", "tabs"],
  "icons": {
    "16": "images/clipBoar16.png",
    "32": "images/clipBoar32.png",
    "48": "images/clipBoar48.png",
    "128": "images/clipBoar128.png"
  },
  "host_permissions": ["https://wms.fantasiasmiguel.com.mx/*"],
  "content_scripts": [
    {
      "matches": ["https://wms.fantasiasmiguel.com.mx/scale/*"],
      "js": ["downloadExel.js", "xlsx.full.min.js"],
      "css": ["balloon.css"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/clipBoar16.png",
      "32": "images/clipBoar32.png",
      "48": "images/clipBoar48.png",
      "128": "images/clipBoar128.png"
    }
  },
  "content_security_policy": {
    "script-src": ["'self'", "'unsafe-inline'"],
    "object-src": "'self'"
  }
}
