{
  "manifest_version": 3,
  "name": "Packing",
  "version": "1.0",
  "description": "Muestra una lista de los art√≠culos y cantidad a empacar",
  "permissions": ["scripting", "activeTab", "storage"],
  "icons": {
    "16": "images/inventory16.png",
    "32": "images/inventory32.png",
    "48": "images/inventory48.png",
    "128": "images/inventory128.png"
  },
  "host_permissions": ["https://wms.fantasiasmiguel.com.mx/*"],
  "content_scripts": [
    {
      "matches": ["https://wms.fantasiasmiguel.com.mx/scale/trans/packing*"],
      "js": ["loader.js","ContextMenuHandler.js", "ToastAlert.js"],
      "css": ["style.css"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["Confirm.js"],
      "matches": ["https://wms.fantasiasmiguel.com.mx/*"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/inventory16.png",
      "32": "images/inventory32.png",
      "48": "images/inventory48.png",
      "128": "images/inventory128.png"
    }
  }
}
