{
    "manifest_version": 3,
    "name": "Amazon Orion 1",
    "version": "1.0",
    "description": "Agrega funcionlidasess, como insetar unidades de trabajo por archivo",
    "permissions": ["scripting", "activeTab", "storage"],
    "icons": {
      "16": "images/amz16.png",
      "32": "images/amz32.png",
      "48": "images/amz48.png",
      "128": "images/amz128.png"
    },
    "content_scripts": [
      {
        "matches": [
          "http://fmorion.dnsalias.com/orion/paginas/AppServicios/ImprAmazon.aspx?PedidoNum=*"
        ],
        "js": ["content.js", "popup.js", "xlsx.full.min.js"],
        "css": ["style.css"],
        "run_at": "document_end"
      }
    ],
    "action": {
      "default_popup": "popup.html",
      "default_icon" :  {
        "16": "images/amz16.png",
        "32": "images/amz32.png",
        "48": "images/amz48.png",
        "128": "images/amz128.png"
      }
    }
  }
  