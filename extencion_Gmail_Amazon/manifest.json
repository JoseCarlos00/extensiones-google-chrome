{
    "manifest_version": 3,
    "name": "Amazon 1",
    "version": "1.0",
    "description": "Modifica el hancho del contenido y lo hace editable",
    "permissions": ["scripting", "activeTab"],
    "icons": {
      "16": "images/pencil16.png",
      "32": "images/pencil32.png",
      "48": "images/pencil48.png",
      "128": "images/pencil128.png"
    },
    "content_scripts": [
      {
        "matches": [
          "https://mail.google.com/mail/u/0/?*"
        ],
        "js": ["content.js"]
      }
    ],
    "action": {
      "default_popup": "popup.html",
      "defaul_icon" :  {
        "16": "images/pencil16.png",
        "32": "images/pencil32.png",
        "48": "images/pencil48.png",
        "128": "images/pencil128.png"
      }
    }
  }
  