{
    "manifest_version": 3,
    "name": "Eventos JS",
    "version": "1.0",
    "description": "Agrega Eventos de teclado personalizados a Scale",
    "permissions": ["scripting", "activeTab"],
    "icons": {
      "16": "images/click16.png",
      "32": "images/click32.png",
      "48": "images/click48.png",
      "128": "images/click128.png"
    },
    "content_scripts": [
      {
        "matches": [
          "https://wms.fantasiasmiguel.com.mx/scale/*"
        ],
        "js": ["content.js"]
      }
    ],
    "action": {
      "default_popup": "popup.html",
      "defaul_icon" :  {
        "16": "images/click16.png",
        "32": "images/click32.png",
        "48": "images/click48.png",
        "128": "images/click128.png"
      }
    }
  }
  