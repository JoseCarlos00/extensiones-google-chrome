{
	"manifest_version": 3,
	"name": "Pedidos Autorizados",
	"version": "1.0",
	"description": "Reporte de Pedidos Autorizados",
	"permissions": [],
	"icons": {
		"16": "icon/icon16.png",
		"32": "icon/icon32.png",
		"48": "icon/icon48.png",
		"128": "icon/icon128.png"
	},
	"content_scripts": [
		{
			"matches": ["https://mail.google.com/*"],
			"js": ["tiendas.js","content.js"]
		}
	],
	"action": {
		"default_popup": "popup.html",
		"default_icon": {
			"16": "icon/icon16.png",
			"32": "icon/icon32.png",
			"48": "icon/icon48.png",
			"128": "icon/icon128.png"
		}
	}
}
