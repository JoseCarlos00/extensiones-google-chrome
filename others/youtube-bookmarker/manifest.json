{
	"name": "YouTube Bookmarks",
	"version": "0.1.0",
	"description": "Guardar marcas de tiempo en los v√≠deos de YouTube",
	"permissions": ["storage", "tabs"],
	"icons": {
		"16": "icon/Youtube-16.png",
		"32": "icon/Youtube-32.png",
		"48": "icon/Youtube-48.png",
		"128": "icon/Youtube-128.png"
	},
	"background": {
		"service_worker": "background.js"
	},
	"content_scripts": [
		{
			"matches": ["https://*.youtube.com/*"],
			"js": ["content.js"]
		}
	],
	"web_accessible_resources": [
		{
			"resources": ["assets/bookmark.png", "assets/play.png", "assets/delete.png", "assets/save.png"],
			"matches": ["https://*.youtube.com/*"]
		}
	],
	"action": {
		"default_icon": {
			"16": "icon/Youtube-16.png",
			"32": "icon/Youtube-32.png",
			"48": "icon/Youtube-48.png",
			"128": "icon/Youtube-128.png"
		},
		"default_title": "YouTube Bookmarks",
		"default_popup": "popup.html"
	},
	"manifest_version": 3
}
